@using nTestSwarm.Application.Domain
@model Job

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Job</legend>

    <div class="display-label">Created</div>
    <div class="display-field">@String.Format("{0:g}", Model.Created)</div>

    <div class="display-label">Updated</div>
    <div class="display-field">@String.Format("{0:g}", Model.Updated)</div>
    
    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Status</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.JobStatus).ToString()</div>

    <div class="display-label">Duration</div>
    <div class="display-field">Job has been running for @Model.GetDuration().TotalSeconds seconds.</div>
</fieldset>

@foreach (var run in Model.Runs)
{
    <p>@run.Name</p>
}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


