@using nTestSwarm.Application.Domain
@model IEnumerable<ClientRun>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Created
        </th>
        <th>
            Updated
        </th>
        <th>
            Client
        </th>
        <th>
            Status
        </th>
        <th>
            FailCount
        </th>
        <th>
            ErrorCount
        </th>
        <th>
            TotalCount
        </th>
        <th>
            Results
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@String.Format("{0:g}", item.Created)
        </td>
        <td>
			@String.Format("{0:g}", item.Updated)
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Client).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Status).ToString()
        </td>
        <td>
			@item.FailCount
        </td>
        <td>
			@item.ErrorCount
        </td>
        <td>
			@item.TotalCount
        </td>
        <td>
			
        </td>
    </tr>
}

</table>


