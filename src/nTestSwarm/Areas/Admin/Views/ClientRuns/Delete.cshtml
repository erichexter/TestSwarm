@using nTestSwarm.Application.Domain
@model ClientRun

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>ClientRun</legend>

    <div class="display-label">Created</div>
    <div class="display-field">@String.Format("{0:g}", Model.Created)</div>

    <div class="display-label">Updated</div>
    <div class="display-field">@String.Format("{0:g}", Model.Updated)</div>

    <div class="display-label">Client</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Client).ToString()</div>

    <div class="display-label">Status</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Status).ToString()</div>

    <div class="display-label">FailCount</div>
    <div class="display-field">@Model.FailCount</div>

    <div class="display-label">ErrorCount</div>
    <div class="display-field">@Model.ErrorCount</div>

    <div class="display-label">TotalCount</div>
    <div class="display-field">@Model.TotalCount</div>

    <div class="display-label">Results</div>
    <div class="display-field">@Model.Results</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


