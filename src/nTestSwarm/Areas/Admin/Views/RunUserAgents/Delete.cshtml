@using nTestSwarm.Application.Domain
@model RunUserAgent

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>RunUserAgent</legend>

    <div class="display-label">Created</div>
    <div class="display-field">@String.Format("{0:g}", Model.Created)</div>

    <div class="display-label">Updated</div>
    <div class="display-field">@String.Format("{0:g}", Model.Updated)</div>

    <div class="display-label">UserAgent</div>
    <div class="display-field">@(Model.UserAgent == null ? "None" : Model.UserAgent.Name)</div>

    <div class="display-label">Remaining Runs</div>
    <div class="display-field">@Model.RemainingRuns</div>

    <div class="display-label">Max</div>
    <div class="display-field">@Model.MaxRuns</div>

    <div class="display-label">Status</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.RunStatus).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


