@using nTestSwarm.Application.Domain
@model RunUserAgent

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Created)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Created)
    @Html.ValidationMessageFor(model => model.Created)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Updated)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Updated)
    @Html.ValidationMessageFor(model => model.Updated)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.RemainingRuns)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.RemainingRuns)
    @Html.ValidationMessageFor(model => model.RemainingRuns)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.MaxRuns)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.MaxRuns)
    @Html.ValidationMessageFor(model => model.MaxRuns)
</div>

<div class="editor-label">
    UserAgent
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.UserAgentId, ((IEnumerable<UserAgent>)ViewBag.PossibleUserAgents).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.UserAgentId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.UserAgentId)
</div>
