@using nTestSwarm.Application.Domain
@model IEnumerable<Job>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Created
        </th>
        <th>
            Updated
        </th>
        <th>
            Name
        </th>
        <th>
            Suite
        </th>
        <th>
            Status
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Copy", "Copy", new { id=item.Id }) | 
            @Html.ActionLink("Status", "Index", "Job", new { area=string.Empty, id=item.Id }, null)
            
        </td>
        <td>
			@String.Format("{0:g}", item.Created)
        </td>
        <td>
			@String.Format("{0:g}", item.Updated)
        </td>       
        <td>
			@item.Name
        </td>
        <td>
			@item.SuiteID
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.JobStatus).ToString()
        </td>
    </tr>
}

</table>


